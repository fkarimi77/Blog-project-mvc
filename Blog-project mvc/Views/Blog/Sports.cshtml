@model IEnumerable<Blog_project_mvc.blog>

@{
    ViewBag.Title = "Sports";
}

<h2>Sports Articles</h2>

<hr/>
<table class="table">
    

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <b style="color: crimson" ; "font-size:large">@Html.DisplayFor(modelItem => item.Btitle)</b>
                <p>
                @Html.DisplayFor(modelItem => item.Bdesc)
                    </p>
            </td>
        </tr>

        <tr>
            <td><a href="~/Blog/@item.BUrl">Read Complete Article</a></td>
        </tr>


        <tr>
            <td>
                Category <a href="~/Blog/@item.BCategory">  @Html.DisplayFor(modelItem => item.BCategory)</a>
            </td>


        </tr>
    }

</table>
